@inherits LayoutComponentBase
@inject IJSRuntime JS

<PageTitle>Shell</PageTitle>
<Sidebar @bind-Collapsed="Collapsed" />
<RightContainer>
    <Header>
        <div class="flex items-center gap-x-6">
            <i class="ri-menu-line text-3xl" @onclick="SidebarCollapse"></i>
            <div class="flex items-center gap-x-2 px-4 w-60 h-10 rounded-full bg-gray-200 dark:bg-gray-800">
                <i class="ri-search-line shrink-0 text-xl pt-0.5"></i>
                <input type=text placeholder="Search..."
                    class="text-black dark:text-white bg-transparent h-full grow outline-none">
            </div>
        </div>
        <div class="flex h-full items-center gap-x-6">
            <i class="ri-moon-line text-3xl" @onclick="SetDark"></i>
            <div class="user h-full flex items-center px-3 gap-x-3 bg-gray-200 dark:bg-gray-800">
                <div class="img-wrap w-12">
                    <img src="images/pfp.png" class="rounded-full">
                </div>
                <div class="flex flex-col text-wrap">
                    <span>Isaac Stark</span>
                    <span>geek@isaacstark.com</span>
                </div>
            </div>
        </div>
    </Header>
    <MainContent>
        @Body
    </MainContent>
    <Footer></Footer>
</RightContainer>

@code {
    public bool Collapsed = false;
    public void SidebarCollapse()
    {
        Collapsed = !Collapsed;
    }
    private async Task SetDark()
    {
        await JS.InvokeVoidAsync("script.setDark");
    }
}
